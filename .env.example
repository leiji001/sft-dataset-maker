# ============ LLM 配置 ============
# OpenAI 兼容接口配置
LLM_API_KEY=sk-your-api-key
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat

# LLM 参数
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ============ MinerU 远端服务配置 ============
MINERU_API_URL=http://localhost:8888/file_parse
MINERU_TIMEOUT=300

# ============ 数据集输出配置 ============
OUTPUT_DIR=./output
OUTPUT_FORMAT=jsonl

# ============ 处理配置 ============
# 每个文档块生成的问题数量
QUESTIONS_PER_CHUNK=5
# 文档分块大小 (字符数)
CHUNK_SIZE=2000
# 文档分块重叠大小
CHUNK_OVERLAP=200
